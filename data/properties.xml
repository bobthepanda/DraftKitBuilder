<?xml version="1.0" encoding="UTF-8"?>
<!--
    This XML file allows us to easily customize the look and language used
    in our program's user interface. Note that this is for customizing settings
    for the Draft Kit Builder interface, NOT the Web page that we're building. 
-->
<properties>
    <property_list>    
        <property name="PROP_APP_TITLE"   value="Draft Kit Builder"></property>  
        
        <!-- PROGRAM ICON FILES -->
        <property name="NEW_DRAFT_ICON"    value="New.png"></property>
        <property name="LOAD_DRAFT_ICON"   value="Load.png"></property>
        <property name="SAVE_DRAFT_ICON"   value="Save.png"></property>
        <property name="VIEW_SCHEDULE_ICON" value="View.png"></property>
        <property name="EXPORT_PAGE_ICON"   value="Export.png"></property>
        <property name="DELETE_ICON"        value="Delete.png"></property>
        <property name="EXIT_ICON"          value="Exit.png"></property>        
        <property name="ADD_ICON"           value="Add.png"></property>
        <property name="MINUS_ICON"         value="Minus.png"></property>
        <property name="MOVE_UP_ICON"       value="MoveUp.png"></property>
        <property name="MOVE_DOWN_ICON"     value="MoveDown.png"></property>
        
        <!-- TOOLTIPS FOR BUTTONS -->
        <property name="NEW_DRAFT_TOOLTIP"         value="Create a New Draft"></property>
        <property name="LOAD_DRAFT_TOOLTIP"        value="Load and Existing Draft"></property>
        <property name="SAVE_DRAFT_TOOLTIP"        value="Save this Draft"></property>
        <property name="VIEW_DRAFT_TOOLTIP"      value="View the Draft Page"></property>
        <property name="EXPORT_DRAFT_TOOLTIP"        value="Export the Draft Page"></property>
        <property name="DELETE_TOOLTIP"             value="Delete this Draft"></property>
        <property name="EXIT_TOOLTIP"               value="Exit the Application"></property>
        <property name="ADD_PLAYER_TOOLTIP"           value="Add Schedule Item"></property>
        <property name="REMOVE_PLAYER_TOOLTIP"        value="Remove Schedule Item"></property>
        <property name="ADD_TEAM_TOOLTIP"        value="Add Lecture"></property>
        <property name="REMOVE_TEAM_TOOLTIP"     value="Remove Lecture"></property>
        
        <!-- GUI LABELS -->
        <property name="FANTASY_TEAMS_LABEL"           value="Fantasy Teams"></property>
        <property name="AVAILABLE_PLAYERS_LABEL"              value="Available Players"></property>
        <property name="SEARCH_LABEL"           value="Search:"></property>
        <property name="FANTASY_STANDINGS_LABEL"            value="Fantasy Standings"></property>
        <property name="DRAFT_SUMMARY_LABEL"          value="Draft Summary"></property>
        <property name="MLB_TEAMS_LABEL"  value = "MLB Teams"></property>
        
        <!-- ERROR MESSAGES -->
        <property name="CLOSE_BUTTON_TEXT"                          value="Close"></property>

        <!-- VERIFICATION MESSAGES -->
        <property name="NEW_DRAFT_CREATED_MESSAGE"     value="New Draft Created but not yet Saved"></property>
        <property name="DRAFT_LOADED_MESSAGE"          value="The Draft has been Loaded"></property>
        <property name="DRAFT_SAVED_MESSAGE"           value="The Draft has been Saved"></property>
        <property name="SITE_EXPORTED_MESSAGE"          value="The Draft Site has been Exported"></property>
        <property name="SAVE_UNSAVED_WORK_MESSAGE"      value="Do you want to save your unsaved work first?"></property>
        <property name="REMOVE_ITEM_MESSAGE"            value="Are you sure you wish to remove the item?"></property>
    </property_list>
    <property_options_list>
    </property_options_list>
</properties>